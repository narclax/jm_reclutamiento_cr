<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="purchase_config_settings_view" model="ir.ui.view">
            <field name="name">purchase.config.settings.view</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase" />
            <field name="arch" type="xml">
                <xpath expr="//block[@name='purchase_setting_container']" position="inside">
                    <group string="Límites por Nivel de Autorización">
                        <field name="nivel_1_max_amount_global" />
                        <field name="nivel_2_max_amount_global" />
                        <field name="nivel_3_max_amount_global" />
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
